<%= form_with model: @article do |f| %>
  <div class="form">
    <div class="form-title">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="form-content">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content %>
    </div>
    <div class="button">
      <%= f.submit %>
    </div>
  </div>
<% end %>
